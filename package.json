{
  "name": "Adachi-BOT",
  "app_name": "Adachi-BOT",
  "version": "1.5.0",
  "app_version": "1.5.0",
  "description": "腾讯 QQ 中的原神机器人",
  "repository": "https://github.com/Arondight/Adachi-BOT.git",
  "homepage": "https://github.com/Arondight/Adachi-BOT",
  "bugs": "https://github.com/Arondight/Adachi-BOT/issues",
  "author": "Qin Fandong",
  "license": "MIT",
  "type": "module",
  "exports": "./app.js",
  "keywords": [
    "bot",
    "qq",
    "genshin",
    "genshin-impact"
  ],
  "engines": {
    "node": ">16.6.0"
  },
  "scripts": {
    "test": "exit 0",
    "db": "npx node ./tools/db.js",
    "view": "npx node ./tools/view.js",
    "format": "npx prettier --config ./.prettierrc.json -uw ./.*.json ./*.json ./app.js ./src/ ./tools/ ./resources_custom/",
    "check": "npx eslint ./app.js ./src/ ./tools/ ./config_defaults/",
    "init": "npx node --max-http-header-size=2097152 ./app.js",
    "start": "cross-env-shell PM2_HOME=$INIT_CWD/bot.pm2/ npx pm2 start ./.pm2.json; cross-env-shell PM2_HOME=$INIT_CWD/bot.pm2/ npx pm2 save",
    "restart": "cross-env-shell PM2_HOME=$INIT_CWD/bot.pm2/ npx pm2 restart ./.pm2.json",
    "stop": "cross-env-shell PM2_HOME=$INIT_CWD/bot.pm2/ npx pm2 stop ./.pm2.json",
    "startup": "cross-env-shell PM2_HOME=$INIT_CWD/bot.pm2/ npx pm2 startup",
    "unstartup": "cross-env-shell PM2_HOME=$INIT_CWD/bot.pm2/ npx pm2 unstartup",
    "list": "cross-env-shell PM2_HOME=$INIT_CWD/bot.pm2/ npx pm2 list bot",
    "info": "cross-env-shell PM2_HOME=$INIT_CWD/bot.pm2/ npx pm2 info bot",
    "log": "cross-env-shell PM2_HOME=$INIT_CWD/bot.pm2/ npx pm2 log --lines 100 bot"
  },
  "dependencies": {
    "clone-deep": "4.0.1",
    "cross-env": "7.0.3",
    "express": "4.17.1",
    "fastest-levenshtein": "1.0.12",
    "fnv-plus": "1.3.1",
    "js-yaml": "4.1.0",
    "kind-of": "6.0.3",
    "lodash": "4.17.21",
    "lowdb": "3.0.0",
    "md5": "2.3.0",
    "moment": "2.29.1",
    "moment-timezone": "0.5.34",
    "node-fetch": "3.1.0",
    "node-schedule": "2.0.0",
    "oicq": "1.21.2",
    "pm2": "5.1.2",
    "pretty-bytes": "5.6.0",
    "puppeteer": "10.4.0",
    "random-float": "3.0.0",
    "systeminformation": "5.9.15",
    "yargs": "17.2.1"
  },
  "devDependencies": {
    "eslint": "8.3.0",
    "eslint-plugin-sort-exports": "0.6.0",
    "eslint-plugin-vue": "8.1.1",
    "eslint-plugin-yaml": "0.5.0",
    "prettier": "2.4.1"
  }
}
